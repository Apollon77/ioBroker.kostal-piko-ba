        "en": "editable poll timer"
      },
      "0.4.0": {
        "en": "changed poll interval to timeout"
      },
      "0.3.7": {
        "en": "removed unused adminTab"
      },
      "0.3.6": {
        "en": "changed min. mandatory js-controller to 3.x"
      },
      "0.3.5": {
        "en": "unused supportCustoms and custom_m.html removed"
      },
      "0.3.4": {
        "en": "removed unused onObjectChange / onStateChange methods"
      },
      "0.3.3": {
        "en": "changed instance object creation to to io-package.json"
      },
      "0.3.2": {
        "en": "updated npm-publish.yml"
      },
      "0.3.0": {
        "en": "updated dependency _got_ to 11.3.0"
      },
      "0.2.9": {
        "en": "fixed gitignore error"
      },
      "0.2.0": {
        "en": "debug phase finished"
      },
      "0.1.0": {
        "en": "first working release"
      },
      "0.0.8": {
        "en": "internal release candidate"
      },
      "0.0.7": {
        "en": "scheduler working"
      },
      "0.0.6": {
        "en": "data load working"
      },
      "0.0.4": {
        "en": "states working"
      },
      "0.0.1": {
        "en": "initial release"
      }
    },
    "main": "main.js",
    "compact": true,
    "materialize": true,
    "materializeTab": true,
    "supportCustoms": false,
    "dependencies": [
      {
        "js-controller": ">=3.0.0",
        "admin": ">=3.0.0"
      }
    ]
  },

  "native": {
    "ipaddress": "",
    "polltimelive": 10000
