{
  "//HINTS": "https://github.com/ioBroker/ioBroker/wiki/Adapter-Development-Documentation#structure-of-io-packagejson",

  "common": {
    "name": "kostal-piko-ba",
    "version": "0.5.1",
    "title": "Kostal PikoBA",
    "titleLang": {
      "en": "Kostal PikoBA",
      "de": "Kostal PikoBA"
    },
    "desc": {
      "en": "Adapter for reading Kostal Piko BA data",
